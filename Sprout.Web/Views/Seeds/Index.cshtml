@model List<Sprout.Data.Domain.Project>

@{
    ViewBag.Title = "Seeds";
    Layout = "~/Views/Shared/_PageLayout.cshtml";
}

<h1 class="page-header" style="margin-top:95px;">Seeds</h1>
<p class="lead">
    This is where ideas are planted. Whether well baked or high level thoughts, clients come here to begin the process of forming an idea. 
    Work together in internal teams or collaborative cross company units to develop innovations. Organizations like Filene and other strategic 
    partners will funnel ideas to this layer to capture attention and garner collaboration. Ideas are then voted on and once formalized will 
    move to the fertilizer channel. 
</p>

<div class="container">
    <div class="row">
        <div class="down_30 col-md-12 text-center">
            @Html.ActionLink("Start a project", "Start", "Seeds", new { @class="btn btn-lg btn-success" }) <p />
        </div>
    </div>
</div>

<div class="container down_30">
    <div class="row">
        <p class="lead">Explore the current projects in the seeds stage</p>
        <div class="col-md-12">
            @{
                foreach (var project in Model)
                {
                    <div class="col-md-3">
                        <div class="thumbnail">
                            <a href="~/Projects?projectId=@project.ProjectId">
                                <img alt="100%x200" data-src="holder.js/100%x200" style="height: 200px; width: 100%; display: block;" src="~/Content/images/project_pictures/@project.TitleThumbImageLink">
                            </a>
                            <div class="caption">
                                <h3>@project.ProjectName</h3>
                                <h5>by @project.ProjectOriginator</h5>
                                <p>@project.Summary</p>
                                <p><span class="glyphicon glyphicon-map-marker"></span> @project.Location</p>                                
                                <div class="progress">
                                    <div class="progress-bar progress-bar-success progress-bar-striped" role="progressbar" aria-valuenow="@project.PercentageFunded" aria-valuemin="0" aria-valuemax="100" style="width: @project.PercentageFunded%"></div>
                                </div>
                                <div>
                                    <div class="project-stats no-margin no-wrap">
                                        <div class="inline-block"><strong class="block">@project.PercentageFunded%</strong> <span>funded</span></div>
                                        <div class="inline-block"><strong class="block">$@project.AmountFunded</strong> <span>pledged</span></div>
                                        <div class="inline-block"><strong class="block">30</strong> <span>days to go</span></div>
                                    </div>
                                </div>
                                <p>@Html.ActionLink("Learn more about this project", "Index", "Projects", new { projectID = @project.ProjectId }, new { @class = "btn btn-primary btn-xs" })</p>                     
                            </div>                    
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</div>